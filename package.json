{
  "name": "theme",
  "description": "Central source of official themes.",
  "version": "0.0.0",
  "scripts": {
    "bootstrap": "lerna bootstrap && lerna link",
    "build": "lerna run build",
    "format": "lerna exec fixpack && yarn top",
    "lint": "lerna exec vivliostyle-theme-scripts validate --scope '@vivliostyle/theme-*'",
    "release": "lerna publish from-package",
    "test": "lerna run test",
    "top": "node -r ts-node/register scripts/top.ts",
    "up": "lerna version --conventional-commits --create-release github"
  },
  "dependencies": {
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@types/node-fetch": "^2.5.7",
    "doctoc": "^1.4.0",
    "esm": "^3.2.25",
    "globby": "^11.0.1",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "doctoc {README,DESIGN}.md && git add {README,DESIGN}.md && pretty-quick --staged"
    }
  },
  "repository": "git@github.com:vivliostyle/theme.git",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/*/*"
  ]
}
